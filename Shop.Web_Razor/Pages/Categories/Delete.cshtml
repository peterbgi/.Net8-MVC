@page
@model Shop.Web_Razor.Pages.Categories.DeleteModel





<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-3">
        <div class="row pb-3">
            <h2 class="text-black-50">Törlés</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Törlés</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/category/index" class="btn btn-primary form-control">
                    Vissza a listához
                </a>
            </div>
        </div>



    </div>
</form>


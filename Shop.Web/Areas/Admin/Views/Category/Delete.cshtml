@model Category

<div class="card shadow border-0 mt-4">
    <div class="mt-0 py-3 card-header bg-secondary">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black-50">Törlés</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-3">
                <div class="row pb-3">
                    <div class="mb-3 row">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="DisplayOrder"></label>
                        <input asp-for="DisplayOrder" disabled class="form-control" />
                    </div>

                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger form-control">Törlés</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-primary form-control">
                                Vissza a listához
                            </a>
                        </div>
                    </div>
                </div>
        </form>
    </div>
</div>



